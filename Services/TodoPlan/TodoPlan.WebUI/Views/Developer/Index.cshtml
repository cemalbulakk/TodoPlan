@model List<TodoPlan.Core.Models.Developer>

@{
    Layout = "_Layout";
}


<div class="card">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered table-hover table-striped">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Weekly Working Hours</th>
                        <th>Duration</th>
                        <th>Difficulty</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Name</td>
                            <td>@item.WeeklyWorkingHours</td>
                            <td>@item.Duration</td>
                            <td>@item.Difficulty</td>
                            <td>
                                <a asp-controller="Developer" asp-action="AddTaskDeveloper" asp-route-developerId="@item.Id">Atama Yap</a>
                                <a asp-controller="Developer" asp-action="AddTaskDeveloper" asp-route-developerId="@item.Id">Atama Yap</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>